@using Color = MudBlazor.Color
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider Theme="currentTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="5" Dense="true" Color="Color.Warning">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())"/>
        <MudText>WhoUnfollows</MudText>
        <MudAppBarSpacer/>
        
        
        
        @if (isdarktheme)
        {
            <MudIconButton Icon="@Icons.Material.Filled.NightsStay" Color="Color.Inherit" OnClick="@(() => DarkMode())"/>
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.WbSunny" Color="Color.Inherit" OnClick="@(() => DarkMode())"/>
        }
        
        
        @if (UserState.isLoggedIn)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" OnClick="@(() => Login(false))"/>
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" OnClick="@(() => Login(true))"/>
        }
        
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <img src="_content/WhoUnfollows/img/logo.png" Style="height:150px; width:150px;" Class="ma-2"/>

        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {

    bool isdarktheme = false;
    
    protected override void OnInitialized()
    {
        UserState.StateChanged += StateHasChanged;
        currentTheme = defaultTheme;
    }

    void Login(bool login)
    {
        if (login)
        {
            NavigationManager.NavigateTo("Login");
        }
        else
        {
            NavigationManager.NavigateTo("Logout");
        }
    }
    
    
    void DarkMode()
    {
        if (currentTheme == defaultTheme)
        {
            currentTheme = darkTheme;
            isdarktheme = true;
        }
        else
        {
            isdarktheme = false;
            currentTheme = defaultTheme;
        }
    }

    MudTheme currentTheme = new MudTheme();
    MudTheme defaultTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Black = "#272c34"
        }
    };

    MudTheme darkTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Black = "#27272f",
            Background = "#32333d",
            BackgroundGrey = "#27272f",
            Surface = "#373740",
            DrawerBackground = "#27272f",
            DrawerText = "rgba(255,255,255, 0.50)",
            DrawerIcon = "rgba(255,255,255, 0.50)",
            AppbarBackground = "#27272f",
            AppbarText = "rgba(255,255,255, 0.70)",
            TextPrimary = "rgba(255,255,255, 0.70)",
            TextSecondary = "rgba(255,255,255, 0.50)",
            ActionDefault = "#adadb1",
            ActionDisabled = "rgba(255,255,255, 0.26)",
            ActionDisabledBackground = "rgba(255,255,255, 0.12)"
        }
    };
    
    
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}